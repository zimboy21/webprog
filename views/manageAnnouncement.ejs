<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="/script.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="/styles.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js"
    integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous">
  </script>

  <title>Manage Announcements</title>
</head>

<body>
  <%- include('authPartial.ejs') %>
  <div class="container">
    <div class="row row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
      <% myAnnouncements.forEach((item) => { %>
      <div id="myAnnouncementCard_<%= item.announcement_id %>" class="col">
        <div class="card h-100">
          <object class="card-img-top" data="http://localhost:8080/images/apartment_<%= item.announcement_id %>_0.jpg"
            type="image/png">
            <img class="card-img-top" src="http://localhost:8080/404.jpg" alt=" ..." />
          </object>
          <div class="card-body">
            <div class="text-center">
              <div id="errdiv_announcement_<%= item.announcement_id %>"></div>
              <h5 onclick="showExtraData('<%= item.announcement_id %>')">
                <%= item.announcement_city %>, <%= item.announcement_quarter %></h5>
              $<%= item.announcement_price %>
            </div>
            <div id="extraData_<%= item.announcement_id %>"></div>
          </div>
          <div class="card-footer">
            <div class="text-center"><a class="btn btn-outline-dark mt-auto"
                href="/announcement/<%= item.announcement_id %>">View</a></div>
            <div class="text-center"><button class="btn btn-outline-dark mt-auto"
                id="openFormButton_<%= item.announcement_id %>"
                onclick="openForm('<%= item.announcement_id %>')">Edit</button>
            </div>
            <div class="form-popup" id="myForm_<%= item.announcement_id %>">
              <form action="/announcement/<%= item.announcement_id %>" method="POST" class="form-container">
                <label for="updateCity">City</label><br>
                <input value="<%= item.announcement_city %>" type="text" name="updateCity" id="updateCity"
                  pattern="^[A-Z][a-z]+"><br>
                <label for="updateQuarter">Quarter</label><br>
                <input value="<%= item.announcement_quarter %>" type="text" name="updateQuarter" id="updateQuarter"
                  pattern="^[A-Za-z0-9-. ]+"><br>
                <label for="updateArea">Area</label><br>
                <input value="<%= item.announcement_area %>" type="number" name="updateArea" id="updateArea"
                  pattern="[0-9]+"><br>
                <label for="updatePrice">Price</label><br>
                <input value="<%= item.announcement_price %>" type="number" name="updatePrice" id="updatePrice"
                  pattern="[0-9]+"><br>
                <label for="updateRomms">Number of rooms</label><br>
                <input value="<%= item.announcement_room_number %>" type="number" name="updateRomms" id="updateRomms"
                  pattern="[0-9]+"><br>
                <button type="submit" class="btn btn-outline-dark mt-auto">Save</button>
                <button type="button" class="btn btn-outline-dark mt-auto"
                  onclick="closeForm('<%= item.announcement_id %>')">Close</button>
              </form>
            </div>
            <div class="text-center"><button class="btn btn-outline-dark mt-auto"
                onclick="deleteMyAnnouncement('<%= item.announcement_id %>')">Delete</button></div>
          </div>
        </div>
      </div>
      <% }); %>
      </section>
    </div>
  </div>
</body>

</html>