<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="/script.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="/styles.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js"
    integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous">
  </script>

  <title>Manage Announcements</title>
</head>

<body>
  <%- include('authPartial.ejs') %>
  <header class="bg-green py-5">
    <div class="container px-4 px-lg-5 my-5">
      <div class="text-center text-white">
        <h1 class="display-4 fw-bolder">Your Announcements</h1>
      </div>
    </div>
  </header>
  <section class="py-5"></section>
  <div class="container px-4 px-lg-5 mt-5">
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
      <% myAnnouncements.forEach((item) => { %>
      <div class="col mb-5">
        <div class="card h-100">
          <object class="card-img-top" data="http://localhost:8080/images/apartment_<%= item.announcement_id %>_0.jpg"
            type="image/png">
            <img class="card-img-top" src="http://localhost:8080/404.jpg" alt=" ..." />
          </object>
          <div class="card-body p-4">
            <div class="text-center">
              <div id="errdiv_announcement_<%= item.announcement_id %>"></div>
              <h5 class="fw-bolder" onclick="showExtraData('<%= item.announcement_id %>')">
                <%= item.announcement_city %>, <%= item.announcement_quarter %></h5>
              $<%= item.announcement_price %>
            </div>
            <div id="extraData_<%= item.announcement_id %>"></div>
          </div>
          <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
            <div class="text-center"><a class="btn btn-outline-dark mt-auto"
                href="/announcement/<%= item.announcement_id %>">View</a></div>
            <% if (item.user_id === payload.uid) { %>
            <div class="text-center"><button class="btn btn-outline-dark mt-auto"
                onclick="deleteAnnouncement('<%= item.announcement_id %>')">Delete</button></div>
            <% } %>
          </div>
        </div>
      </div>
      <% }); %>
      </section>
    </div>
  </div>
</body>

</html>